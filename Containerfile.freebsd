# FreeBSD version of the OCI container
# Note: This requires a FreeBSD host and a container engine that supports FreeBSD (like Podman on FreeBSD)
FROM freebsd/node:18 AS builder

WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

FROM freebsd/nginx
COPY --from=builder /app/dist /usr/local/www/nginx
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
